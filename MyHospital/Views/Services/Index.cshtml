@model IEnumerable<Service>

@{
    ViewData["Title"] = "Services";
}

<div class="container mt-5">

    <div class="p-5 mb-5 bg-light rounded-4 shadow-sm text-center">
        <a class="btn btn-primary btn-lg px-4 mt-3" asp-controller="Services" asp-action="Manage">
            الاضافة | التعديل | الحذف
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">الخدمات</h3>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                @foreach (var item in Model)
                {
                    <li class="list-group-item">@item.Name</li>
                }
            </ul>
        </div>
    </div>
</div>
