@model IEnumerable<Faq>
@{
    ViewData["Title"] = "Manage Faqs";
}

<h1>Manage Faqs || Add Edit Delete</h1>

<div class="container">

    <div class="text-end">

        <a asp-controller="Faqs" asp-action="Create" class="btn btn-outline-primary">Add New</a>

    </div>


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>Answer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var faq in Model)
            {

                <tr>
                    <td>@faq.Id</td>
                    <td>@faq.Question</td>
                    <td>@faq.Answer</td>
                    <td>
                        <a asp-action="Edit" asp-route-Uid="@faq.Uid" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-Uid="@faq.Uid" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>

            }


        </tbody>
    </table>
</div>