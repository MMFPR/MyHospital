@model IEnumerable<Category>
@{
    ViewData["Title"] = "الفئات الطبية";
}

<div class="container-fluid py-5">
    <div class="p-5 mb-5 bg-light rounded-4 shadow-sm text-center">
        <h1 class="fw-bold text-primary">الفئات الطبية</h1>
        <p class="fs-5 text-muted mt-3">
            تصفّح التخصصات الطبية المتاحة في المنصّة، واختر القسم المناسب لاحتياجاتك.
        </p>
        <a class="btn btn-primary btn-lg px-4 mt-3" asp-controller="Categories" asp-action="Manage">
            الاضافة | التعديل | الحذف
        </a>
    </div>



    <div class="row gy-4 gx-4">
    @foreach (var category in Model)
    {
        <div class="col-12 col-sm-6 col-lg-4 mb-2">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-success">@category.Name</h5>
                    <p class="card-text text-secondary">@category.Description</p>
                </div>
            </div>
        </div>
    }
</div>
</div>


